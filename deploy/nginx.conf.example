# Nginx 反向代理配置示例
# 将此文件复制到 /etc/nginx/sites-available/ 并根据实际情况修改

upstream warehouse_backend {
    server localhost:2124;
}

upstream warehouse_frontend {
    server localhost:2125;
}

# HTTPS 服务器（推荐）
server {
    listen 443 ssl http2;
    server_name warehouse.example.com;

    # SSL 证书配置
    ssl_certificate /path/to/cert.pem;
    ssl_certificate_key /path/to/key.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;

    # 安全响应头
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data:;" always;

    # API 代理
    location /api/ {
        proxy_pass http://warehouse_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 文件上传大小限制
        client_max_body_size 10M;

        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # 前端代理
    location / {
        proxy_pass http://warehouse_frontend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # 静态文件缓存
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ {
            proxy_pass http://warehouse_frontend;
            expires 7d;
            add_header Cache-Control "public, immutable";
        }
    }

    # 健康检查端点
    location /health {
        access_log off;
        proxy_pass http://warehouse_backend/api/dashboard/stats;
    }
}

# HTTP 重定向到 HTTPS
server {
    listen 80;
    server_name warehouse.example.com;
    return 301 https://$server_name$request_uri;
}

# 速率限制配置（可选，在http块中添加）
# limit_req_zone $binary_remote_addr zone=api_limit:10m rate=10r/s;
# limit_req_zone $binary_remote_addr zone=login_limit:10m rate=5r/m;
#
# 在location /api/auth/login中使用:
# limit_req zone=login_limit burst=5 nodelay;
