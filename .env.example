# ====================================
# 仓库管理系统 - 环境变量配置
# ====================================
# 复制此文件为 .env 并根据需要修改

# -------------------------------------
# 数据库配置
# -------------------------------------
DATABASE_PATH=./warehouse.db

# -------------------------------------
# 安全配置
# -------------------------------------
# 使用bcrypt密码哈希（推荐）
BCRYPT_ENABLED=true

# CORS允许的源（逗号分隔，或 * 允许所有）
# 开发环境可使用 *，生产环境应设置具体域名
CORS_ORIGINS=*

# 启用安全响应头（生产环境推荐开启）
ENABLE_SECURITY_HEADERS=false

# -------------------------------------
# Excel导入限制
# -------------------------------------
# 上传文件大小限制（MB）
MAX_UPLOAD_SIZE_MB=10

# 导入行数限制
MAX_IMPORT_ROWS=10000

# -------------------------------------
# 数据库优化
# -------------------------------------
# 启用SQLite生产模式（WAL、外键等）
SQLITE_PRODUCTION_MODE=false

# -------------------------------------
# 应用配置
# -------------------------------------
# 启动时生成模拟数据（生产环境设为false）
INIT_MOCK_DATA=true

# -------------------------------------
# 日志配置
# -------------------------------------
# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 启用审计日志（记录敏感操作）
ENABLE_AUDIT_LOG=true
